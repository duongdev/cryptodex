{
  "name": "cryptodex",
  "version": "0.0.0",
  "private": "true",
  "module": "index.ts",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "cms:build": "turbo run build --filter={apps/cms}",
    "cms:dev": "turbo run dev --filter={apps/cms}",
    "cms:start": "turbo run start --filter={apps/cms}",
    "web:dev": "turbo run dev --filter={apps/web}",
    "clean": "rm -rf node_modules {packages,apps}/*/node_modules bun.lockb {packages,apps}/*/bun.lockb"
  },
  "devDependencies": {
    "@cryptodex/eslint-config": "workspace:*",
    "typescript": "5"
  },
  "dependencies": {
    "turbo": "^1.13.3"
  },
  "overrides": {
    "prettier": "^3.2.5"
  },
  "trustedDependencies": [
    "@vercel/speed-insights",
    "core-js-pure"
  ]
}